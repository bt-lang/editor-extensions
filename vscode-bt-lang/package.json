{
  "name": "bt-lang",
  "displayName": "BT-lang",
  "description": "A code highlighting extension for the BT programming language.",
  "version": "1.0.0",
  "publisher": "BT",
  "icon": "icon.png",
  "homepage": "https://bts.wang",
  "repository": {
    "type": "git",
    "url": "https://github.com/bt-lang/editor-extensions"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "bt",
    "bt-lang",
    "code highlighting",
    "syntax highlighting"
  ],
  "main": "./extension.js",
  "activationEvents": [
    "onCommand:extension.runBTScript"
  ],
  "contributes": {
    "languages": [
      {
        "id": "bt",
        "aliases": [
          "BT",
          "BT Language"
        ],
        "extensions": [
          ".bt"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "bt",
        "scopeName": "source.bt",
        "path": "./syntaxes/bt.tmLanguage.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "runBTScript",
          "title": "Run Script",
          "icon": "run.svg"
        }
      ]
    },
    "views": {
      "runBTScript": [
        {
          "id": "package-dependencies",
          "name": "Dependencies",
          "when": "false"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.runBTScript",
        "title": "Run Script"
      }
    ],
    "activationEvents": [
      "onCommand:extension.runBTScript"
    ]
  },
  "dependencies": {
    "bt-lang": "file:"
  }
}
