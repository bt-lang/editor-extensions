{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" },
    { "open": "`", "close": "`" }
  ],
  "surroundingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" },
    { "open": "`", "close": "`" }
  ],
  "onEnterRules": [
    {
      "beforeText": "^\\s*\\/\\*\\*(?!\\/)([^*]|(\\*(?!\\/)))*$",
      "afterText": "^\\s*\\*\\/",
      "action": {
        "indent": "indentOutdent",
        "appendText": " * "
      }
    },
    {
      "beforeText": "^\\s*\\/\\*\\*(?!\\/)([^*]|(\\*(?!\\/)))*$",
      "action": {
        "indent": "indent",
        "appendText": " * "
      }
    },
    {
      "beforeText": "^\\s*\\*(?!\\/)([^*]|(\\*(?!\\/)))*$",
      "action": {
        "indent": "indent",
        "appendText": " * "
      }
    }
  ]
}