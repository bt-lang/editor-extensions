{
  "name": "bt-lang",
  "displayName": "BT-lang",
  "description": "A code highlighting extension for the BT programming language.",
  "version": "1.0.0",
  "publisher": "BT",
  "icon": "image/icon.png",
  "homepage": "https://bts.wang",
  "repository": {
    "type": "git",
    "url": "https://github.com/bt-lang/editor-extensions"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "bt",
    "bt-lang",
    "code highlighting",
    "syntax highlighting"
  ],
  "main": "./extension.js",
  "activationEvents": [
    "onCommand:bt-lang.highlight"
  ],
  "contributes": {
    "languages": [
      {
        "id": "bt",
        "aliases": [
          "BT",
          "BT Language"
        ],
        "extensions": [
          ".bt"
        ],
        "configuration": "./syntaxes/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "bt",
        "scopeName": "source.bt",
        "path": "./syntaxes/bt.tmLanguage.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "runBTScript",
          "title": "运行bt脚本",
          "icon": "image/run.svg"
        }
      ]
    },
    "views": {
      "runBTScript": [
        {
          "id": "runBTScript",
          "name": "运行bt脚本"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "runBTScript",
        "contents": "默认使用当前目录的BT语言编译器，若不存在，则使用本扩展内置的BT语言编译器\n[运行](command:extension.runBTScript)\n\n官网：[https://bts.wang](https://bts.wang)\n文档：[https://bts.wang/doc](https://bts.wang/doc)"
      }
    ],
    "commands": [
      {
        "command": "bt-lang.highlight",
        "title": "BT Language Code Highlight"
      },
      {
        "command": "extension.runBTScript",
        "title": "Run BT Script"
      }
    ]
  },
  "dependencies": {
    "bt-lang": "file:"
  }
}
